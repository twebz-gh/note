body {
    background-color: #000;
    color: #aaa;
    font-family: 'Ubuntu', sans-serif;
}

h1, h2, h3, h4 {
    margin-top: 0.5em;
    margin-bottom: 0.1em;
}

h1 { text-align: center; }
h2 {
    border-style: none none solid none;
    border-color: #444;
}
h3 {
    border-style: none none dotted none;
    border-color: #444;
    border-width: 1px;
}

blockquote, p {
    margin-bottom: 0.4em;
    line-height: 1em;
}

ul, ol, dl {
    margin-bottom: 0.4em;
    line-height: 1em;
}

code {
    color: #eee;
    font-size: 100%;
    font-family: monospace;
}

pre code {
    background-color: #222;
    display: block;
}

a { text-decoration: none; } /* dont underline links */

/* So links in the main page are not too dark. */
#main a         { color: #aaaaff; }
#main a:link    { color: #aaaaff; }
#main a:visited { color: #aaaaff; }
#main a:hover   { color: #ccaaff; }
#main a:active  { color: #aaaaff; }


/******************************************************************************/
/********* SIDE NAVIGATION ****************************************************/

 /* The side navigation menu */
.sidenav {
    height: 100%; /* 100% Full-height */
    /*width: 250px; /* change this with JavaScript */
    position: fixed; /* Stay in place */
    z-index: 1; /* in front */
    top: 0; /* at top */
    left: 0;
    background-color: #111; /* dark gray*/
    overflow-x: hidden; /* Disable horizontal scroll */
    padding-left: 10px;;
    padding-top: 10px;
    transition: 0.2s; /* seconds transition effect to slide in the sidenav */
}

/* The navigation menu links */
.sidenav a.navButton {
    padding: 10px 15px 10px 15px;
    border-width: 1px;
    border-color: #aaa;
    border-style: solid;
    border-radius: 0.5em;
    font-family: monospace;
    font-size: 120%;
    color: #aaa;
    display: inline-block;
    vertical-align: top;
}

/* The table-of-contents links*/
.sidenav a {
    display: block;
    text-decoration: none;  /* don't underline links */
    color: #aaa;
    white-space: pre;  /* Don't wrap long lines. */
    line-height: 1.3;
}

/* When you mouse over the navigation links, change their color */
.sidenav a:hover {
    color: #fff;
    border-color: #fff;
}

.sidenav h3 {
    border-style: none;
    margin-top: 2em;
    margin-bottom: 1em;
}

/* Push page content to the right to make room for the side navigation */
#main {
    padding: 20px;
    border-color: #333;
    border-style: solid;
    border-width: 1px;
    border-radius: 0.5em;
    transition: margin-left .2s;
    /*margin-left: 270px; /* change this with JavaScript */
}

